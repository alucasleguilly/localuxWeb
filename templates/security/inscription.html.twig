{% extends 'base.html.twig' %}

{% block body %}
	<center>
		<div class="container" style="margin-top:5%; margin-bottom:5%;">

			{{form_start(monForm)}}

			<div class="form-control" style="background-color: #1A58B0; border-radius: 1rem; padding-left:10%; padding-right:10%; padding-top:3%; padding-bottom:3%;">
				<b style="color:white;">Nom</b>
				{{ form_widget(monForm.lastName) }}
				<br><br>
				<b style="color:white;">Prénom</b>
				{{ form_widget(monForm.firstName) }}
				<br><br>
				<b class="" style="color:white;">Login</b>
				{{ form_widget(monForm.login) }}
				<br><br>
				<b class="" style="color:white;">Rue</b>
				{{ form_widget(monForm.street) }}
				<br><br>
				<b class="" style="color:white;">Ville</b>
				{{ form_widget(monForm.city) }}
				<br><br>
				<b class="" style="color:white;">Code postal</b>
				{{ form_widget(monForm.postcode) }}
				<br><br>
				<b class="" style="color:white;">Mail</b>
				{{ form_widget(monForm.email) }}
				<br><br>
				<b class="" style="color:white;">Téléphone</b>
				{{ form_widget(monForm.phone) }}
				<br><br>
				<b class="" style="color:white;">Mot de passe</b>
				{{ form_widget(monForm.password) }}
				<br><br>
				<input type="submit" class="btn btn-dark btn-lg btn-block" style="margin-top:2%; margin-bottom:2%" value="Inscription">
			</div>
			{{form_end(monForm)}}
		</div>
	</center>
{% endblock %}
